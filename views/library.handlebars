<!-- Navbar -->
{{> navbar-partial }}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h1>Click any image to view it in the picture page.</h1>
        </div>
    </div>

    <br />

    <div class="row">
        {{#each user.library}}
        <div class="col-md-4">
            <div id="{{_id}}" style="margin-bottom: 50px; text-align: center">
                
                <div class="my-wrapper">
                    <form action="/api/review" method="post">
                        <input type="hidden" name="id" value="{{_id}}" />
                        <input type="image" src="{{{bufferToString image}}}" style="height: 100%; width: 100%;" alt="Submit Form" class="image" />
                    </form>
                </div>
                <i class="fas fa-trash-alt fa-2x" style="cursor: pointer"></i>
            </div>
        </div>
        {{/each}}
    </div>

</div>